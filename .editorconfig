# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# XML files
[*.xml]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf

# Git files
[.git*]
indent_style = space
indent_size = 2